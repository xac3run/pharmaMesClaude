# .env файл для конфигурации
POSTGRES_DB=pharmaceutical_mes
POSTGRES_USER=mes_user
POSTGRES_PASSWORD=SecurePassword123!
REDIS_URL=redis://redis:6379
NODE_ENV=production
PORT=80

# Настройки для GMP compliance
ENABLE_AUDIT_TRAIL=true
ENABLE_ELECTRONIC_SIGNATURES=true
CFR_PART_11_MODE=true

# Настройки безопасности
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-change-this
ENCRYPTION_KEY=32-character-encryption-key-here

# Настройки уведомлений
SMTP_HOST=smtp.yourcompany.com
SMTP_PORT=587
SMTP_USER=mes-system@yourcompany.com
SMTP_PASS=your-email-password

# Настройки интеграции
ERP_API_URL=https://your-erp-system.com/api
OPC_UA_ENDPOINT=opc.tcp://your-scada:4840
